{ 
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5", 
		"sourceMap": true,
		"allowJs": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
    "removeComments": true,
    "outDir": "../../build"
  },
  "include": [
		"../../src/**/*",
		"../../src/**/*.html",
    "../../src/*"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../assets"
  ]
}