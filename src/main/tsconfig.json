{ 
  "compilerOptions": {
    //input
    "module": "commonjs",
    //output
    "target": "ES5", 
    "sourceMap": true,
    "strict": false,
    "removeComments": true,
    "outDir": "../../build",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
  },
  "include": [
    "../../src/**/*",
    "../../src/*"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../assets"
  ]
}