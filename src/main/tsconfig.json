{ 
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5", 
    "sourceMap": true,
    "esModuleInterop": true,
		"allowJs": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
    "removeComments": true,
    "outDir": "../../build",
    "typeRoots": [ "../../node_modules/@types"]
  },
  "include": [
		"../../src/**/*",
		"../../src/**/*.html",
    "../../src/*",
    "../../node_modules/@types/puppeteer/index.d.ts"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../assets"
  ]
}